                            <div class="small-8 small-offset-2 columns end">
                                Foo.
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <div class="full-width background-pattern-blue">
                <div class="row small-padding-top-5x small-padding-bottom-2x color-gray-text text-center">
                    <div class="small-12 columns">
                        <p>
                            Copyright &copy; 2014<br class="show-for-small" />
                            @todo
                        </p>
                    </div>
                </div>
            </div>

            <!-- close the off-canvas menu -->
            <a class="exit-off-canvas"></a>

        </div>
    </div>

    <script src="/js/bower.js"></script>
